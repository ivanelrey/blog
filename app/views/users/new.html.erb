<h1 align="center"> Signup for Blog</h1>

<%= render 'shared/errors', obj: @user %>

<div class="row">
	<div class="col-xs-12">
		<%= form_for(@user, :html => {class: "form-horizontal", role: "form"})  do |f| %>

			<div class="form-group">
			    <label class="col-sm-2 control-label"><%= f.label :username %></label>
			    <div class="col-sm-8">
			      <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
			    </div>
			</div>
			
			<div class="form-group">
			    <label class="col-sm-2 control-label"><%= f.label :email %></label>
			    <div class="col-sm-8">
			      <%= f.email_field :email, class: "form-control", placeholder: "enter email" %>
			    </div>
			</div>

			<div class="form-group">
			    <label class="col-sm-2 control-label"><%= f.label :password %></label>
			    <div class="col-sm-8">
			      <%= f.password_field :password, class: "form-control", placeholder: "enter email" %>
			    </div>
			</div>

			<div class="form-group">
			    <div class="col-sm-offset-2 col-sm-10">
			      <%= link_to "Cancel", articles_path, class: "btn btn-danger" %>
			      <%= f.submit 'Sign up', class: "btn btn-default" %>
			    </div>
		  	</div>

		<% end %>
	</div>
</div>